- if @message.receiver == current_user
  .well.clearfix
    %h4
      Message from
      - if @message.sender.nil?
        = @message.sender
      - else
        a Masher
    
    = @message.content.camelcase

    %br
    .pull-right
      = link_to "Back", :back
- else
  %br
  %h4 Sorry, you don't have permission to view other people's messages :)