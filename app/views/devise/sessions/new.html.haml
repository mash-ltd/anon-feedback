= content_for :new_session do
  = form_for :user, :url => new_user_session_path, :html => {:class => "form-inline navbar-form pull-right"} do |f|
    = f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "input-medium"
    = f.password_field :password, :class => "input-medium", :placeholder => "Password"
    = f.submit "Sign in", :class => "btn btn-primary"
    - if devise_mapping.rememberable?
      %br
      .pull-right
        = f.check_box :remember_me
        = f.label :remember_me

= content_for :new_user do
  %h3 Sign up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    .form-horizontal
      - if devise_error_messages!.nil?
        .alert.alert-error
          %button.close{type:"button", data:{dismiss:"alert"}}
            x
          = devise_error_messages!
      .control-group
        .control-label
          = f.label :username
        .controls
          = f.text_field :username
      .control-group
        .control-label
          = f.label :email
        .controls
          = f.email_field :email
      .control-group
        .control-label
          = f.label :password
        .controls
          = f.password_field :password
      .control-group
        .control-label
          = f.label :password_confirmation
        .controls
          = f.password_field :password_confirmation
      .controls
        = f.submit "Sign up", :class => "btn btn-primary"